#!/bin/sh -e

HXBIF=hxb0
HAVE_USB=0

if ip link show usb0 >/dev/null 2>&1
then
	HXBIF=usb0
	HAVE_USB=1
fi

case "$1" in
	init)
		if [ -e /etc/radvd.conf ]
		then
			echo "Networks already configured"
			exit 1
		fi

		cp /etc/network/interfaces /etc/network/.interfaces-pre-autoconfig
		python3 /usr/lib/hxb-net-autoconf/hxb-net-autoconf.py \
			eth0 $HXBIF $HAVE_USB || exit 2

		service networking restart || exit 3
		service radvd restart || exit 4
		service mrd6 restart || exit 5
		;;

	forget)
		service radvd stop
		service mrd6 stop
		rm /etc/radvd.conf
		ifdown $HXBIF
		cp /etc/network/.interfaces-pre-autoconfig /etc/network/interfaces
		service networking restart
		;;

	*)
		echo "No action given"
		exit 1
		;;
esac
